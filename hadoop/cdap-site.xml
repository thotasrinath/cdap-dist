<configuration>

    <!-- General Configuration -->

    <property>
        <name>zookeeper.quorum</name>
        <value>172.17.0.2:2181</value>
        <description>
            zookeeper url
        </description>
    </property>
    <property>
        <name>hdfs.user</name>
        <value>yarn</value>
        <description>
            User name for accessing HDFS
        </description>
    </property>
    <property>
        <name>router.server.address</name>
        <value>172.17.0.6</value>
        <description>
            CDAP Router service address to which CDAP UI connects
        </description>
    </property>

    <property>
        <name>kafka.seed.brokers</name>
        <value>172.17.0.4:9092</value>
        <description>
            Comma-separated list of CDAP Kafka service brokers; for Distributed
            CDAP, replace with list of FQDN:port brokers
        </description>
    </property>
    <property>
        <name>kafka.server.host.name</name>
        <value>172.17.0.4</value>
        <description>
            CDAP Kafka service bind address
        </description>
    </property>

</configuration>